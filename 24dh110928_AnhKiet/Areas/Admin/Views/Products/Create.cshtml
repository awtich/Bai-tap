@model _24dh110928_AnhKiet.Models.Product

@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-success text-white fw-bold">
            ➕ THÊM SẢN PHẨM MỚI
        </div>

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(model => model.CategoryID, "Danh mục", new { @class = "form-label fw-bold" })
                    @Html.DropDownList("CategoryID", null, new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.ProductName, "Tên sản phẩm", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên sản phẩm..." } })
                    @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.ProductDecription, "Mô tả", new { @class = "form-label fw-bold" })
                    @Html.TextAreaFor(model => model.ProductDecription, new { @class = "form-control", rows = 3, placeholder = "Nhập mô tả sản phẩm..." })
                    @Html.ValidationMessageFor(model => model.ProductDecription, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.ProductPrice, "Giá sản phẩm (VNĐ)", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.ProductPrice, new { htmlAttributes = new { @class = "form-control", type = "number", min = "0" } })
                    @Html.ValidationMessageFor(model => model.ProductPrice, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.ProductImage, "Hình ảnh (tên file hoặc link)", new { @class = "form-label fw-bold" })
                    @Html.EditorFor(model => model.ProductImage, new { htmlAttributes = new { @class = "form-control", placeholder = "vd: iphone15.png" } })
                    @Html.ValidationMessageFor(model => model.ProductImage, "", new { @class = "text-danger" })
                </div>

                <div class="text-end mt-4">
                    <input type="submit" value="Lưu sản phẩm" class="btn btn-success me-2" />
                    @Html.ActionLink("⬅️ Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
