@model _24dh110928_AnhKiet.Models.Product

@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-info-circle-fill"></i> Chi tiết sản phẩm
            </h4>
        </div>

        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">Tên sản phẩm:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

                <dt class="col-sm-3 fw-bold">Mô tả:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductDecription)</dd>

                <dt class="col-sm-3 fw-bold">Giá:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductPrice)</dd>

                <dt class="col-sm-3 fw-bold">Hình ảnh:</dt>
                <dd class="col-sm-9">
                    <img src="~/Content/Images/@Model.ProductImage" alt="@Model.ProductName"
                         class="img-thumbnail" style="max-width:150px;" />
                </dd>

                <dt class="col-sm-3 fw-bold">Danh mục:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
            </dl>

            <div class="text-end mt-4">
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-warning me-2" })
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
</div>
