@model _24dh110928_AnhKiet.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.ProductName)</dt>
        <dd>@Html.DisplayFor(model => model.ProductName)</dd>

        <dt>@Html.DisplayNameFor(model => model.ProductDecription)</dt>
        <dd>@Html.DisplayFor(model => model.ProductDecription)</dd>

        <dt>@Html.DisplayNameFor(model => model.ProductPrice)</dt>
        <dd>@Html.DisplayFor(model => model.ProductPrice)</dd>

        <dt>@Html.DisplayNameFor(model => model.ProductImage)</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.ProductImage))
            {
                <img src="~/Content/Images/@Model.ProductImage" alt="Product Image" width="150" class="img-thumbnail" />
            }
            else
            {
                <p>No image available</p>
            }
        </dd>

        <dt>@Html.DisplayNameFor(model => model.Category.CategoryName)</dt>
        <dd>@Html.DisplayFor(model => model.Category.CategoryName)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.Raw("&nbsp;")
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
