@model _24dh110928_AnhKiet.Models.Product

@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle-fill"></i> Xóa sản phẩm
            </h4>
        </div>

        <div class="card-body">
            <h5 class="text-danger">Bạn có chắc chắn muốn xóa sản phẩm này không?</h5>
            <hr />

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">Tên sản phẩm:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductName)</dd>

                <dt class="col-sm-3 fw-bold">Mô tả:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductDecription)</dd>

                <dt class="col-sm-3 fw-bold">Giá:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ProductPrice)</dd>

                <dt class="col-sm-3 fw-bold">Hình ảnh:</dt>
                <dd class="col-sm-9">
                    <img src="~/Content/Images/@Model.ProductImage" alt="@Model.ProductName" class="img-thumbnail" style="max-width:150px;" />
                </dd>

                <dt class="col-sm-3 fw-bold">Danh mục:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-end">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash3"></i> Xóa
                    </button>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
