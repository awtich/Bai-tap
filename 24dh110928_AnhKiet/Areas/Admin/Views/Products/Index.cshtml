@model IEnumerable<_24dh110928_AnhKiet.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-box-seam"></i> Danh sách sản phẩm</h4>
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-light text-primary fw-bold" })
    </div>

    <div class="card-body">
        <table class="table table-hover align-middle text-center">
            <thead class="table-light">
                <tr>
                    <th>Tên sản phẩm</th>
                    <th>Mô tả</th>
                    <th>Giá</th>
                    <th>Hình ảnh</th>
                    <th>Danh mục</th>
                    <th>Hành động</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.ProductDecription</td>
                        <td class="text-danger fw-bold">@item.ProductPrice.ToString("N0") ₫</td>
                        <td>
                            <img src="~/Content/Images/@item.ProductImage" alt="@item.ProductName" width="80" height="80" class="rounded shadow-sm" />
                        </td>
                        <td>
                            @(item.Category != null ? item.Category.CategoryName : "Không có danh mục")
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-warning btn-sm fw-bold me-1" })
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-info btn-sm fw-bold text-white me-1" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-danger btn-sm fw-bold" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
