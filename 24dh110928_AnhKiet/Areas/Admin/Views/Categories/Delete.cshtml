@model _24dh110928_AnhKiet.Models.Category

@{
    ViewBag.Title = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-danger text-white fw-bold">
             Xác nhận xóa danh mục
        </div>

        <div class="card-body">
            <p class="fs-5 text-danger mb-4">
                Bạn có chắc chắn muốn xóa danh mục này không?
            </p>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Tên danh mục</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                         Quay lại danh sách
                    </a>

                    <button type="submit" class="btn btn-danger fw-bold">
                         Xóa danh mục
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
