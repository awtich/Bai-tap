@model _24dh110928_AnhKiet.Models.Category

@{
    ViewBag.Title = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white d-flex align-items-center">
            <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
            <h4 class="mb-0">Xóa danh mục</h4>
        </div>

        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-circle"></i>
                Bạn có chắc chắn muốn xóa danh mục này? Hành động này <strong>không thể hoàn tác</strong>.
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">Tên danh mục:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CategoryName)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="text-end">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash3"></i> Xóa
                    </button>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-outline-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
