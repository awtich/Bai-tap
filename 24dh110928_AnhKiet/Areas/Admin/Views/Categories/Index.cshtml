@model IEnumerable<_24dh110928_AnhKiet.Models.Category>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary mb-0">Danh sách danh mục</h2>
        @Html.ActionLink(" Thêm mới", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Tên danh mục</th>
                        <th scope="col" class="text-center">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td class="text-center">
                                @Html.ActionLink(" Cập nhật", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary btn-sm me-2" })
                                @Html.ActionLink(" Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
