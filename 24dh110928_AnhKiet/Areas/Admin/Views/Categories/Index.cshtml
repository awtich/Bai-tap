@model IEnumerable<_24dh110928_AnhKiet.Models.Category>

@{
    ViewBag.Title = "Danh sách danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-list-ul"></i> Danh sách danh mục</h4>
            @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-light btn-sm fw-bold" })
        </div>

        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-success">
                    <tr>
                        <th class="col-8">Tên danh mục</th>
                        <th class="text-center col-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                            <td class="text-center">
                                @Html.ActionLink("Cập nhật", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-warning btn-sm me-1" })
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-info btn-sm me-1 text-white" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger btn-sm" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
