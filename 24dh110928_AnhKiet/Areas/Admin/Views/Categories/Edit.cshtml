@model _24dh110928_AnhKiet.Models.Category

@{
    ViewBag.Title = "Chỉnh sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-warning">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Chỉnh sửa danh mục</h4>
        </div>

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.CategoryID)

                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                <div class="mb-3 row">
                    @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "col-sm-2 col-form-label fw-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên danh mục..." } })
                        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
