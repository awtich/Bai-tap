@model _24dh110928_AnhKiet.Models.Category

@{
    ViewBag.Title = "Cập nhật danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-warning text-dark fw-bold">
            ✏️ Cập nhật danh mục
        </div>

        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.CategoryID)

                <div class="mb-3">
                    @Html.LabelFor(model => model.CategoryName, "Tên danh mục", new { @class = "form-label fw-semibold" })
                    @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên danh mục..." } })
                    @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        ⬅️ Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-warning text-white fw-bold">
                        💾 Lưu thay đổi
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
